<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.serj.eattheburger.GameOver"
    android:background="@drawable/fondoreiniciar">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REINTENTAR"
        android:id="@+id/btReintentar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="reintentar"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Puntuacion"
        android:id="@+id/tvPuntuacion"
        android:layout_above="@+id/btReintentar"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="#ffefefef" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PuntuacionMax"
        android:id="@+id/tvPuntuacionMax"
        android:layout_above="@+id/tvPuntuacion"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="#ffefefef" />
</RelativeLayout>
